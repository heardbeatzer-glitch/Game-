<body>

    <div id="sunburst"></div>

    <div id="game-container">
        <div style="text-align: center;">
            <h1 id="balance-display">€0</h1>
            <div id="coin">GOLD</div>
        </div>
    </div>

    <div id="sidebar">
        <h2>Upgrades</h2>
        <button id="upgrade-click" class="upgrade-btn">
            <b>Click Power</b><br>Level: 0<br>Cost: €10
        </button>
        <button id="upgrade-auto" class="upgrade-btn">
            <b>Auto Miner</b><br>Level: 0<br>Cost: €50
        </button>
    </div>

    <script>
        // GAME LOGIC (Python-style English Coding)
        let balance = 0;
        let clickPower = 1;
        let autoRate = 0;
        let multiplier = 1.15;

        let costs = {
            click: 10,
            auto: 50
        };

        let levels = {
            click: 0,
            auto: 0
        };

        const coin = document.getElementById('coin');
        const balanceDisplay = document.getElementById('balance-display');

        // Main Click Event
        coin.addEventListener('touchstart', (e) => {
            e.preventDefault(); // Voorkom zoomen
            handleAction(e.touches[0].clientX, e.touches[0].clientY);
        });

        coin.addEventListener('mousedown', (e) => {
            handleAction(e.clientX, e.clientY);
        });

        function handleAction(x, y) {
            balance += clickPower;
            createFloatingText(x, y, "+" + formatNumber(clickPower));
            updateUI();
        }

        // Upgrade Click Power
        document.getElementById('upgrade-click').onclick = () => {
            if (balance >= costs.click) {
                balance -= costs.click;
                levels.click++;
                clickPower += 1;
                costs.click = Math.floor(10 * Math.pow(multiplier, levels.click));
                updateUI();
            }
        };

        // Upgrade Auto Miner
        document.getElementById('upgrade-auto').onclick = () => {
            if (balance >= costs.auto) {
                balance -= costs.auto;
                levels.auto++;
                autoRate += 2;
                costs.auto = Math.floor(50 * Math.pow(multiplier, levels.auto));
                updateUI();
            }
        };

        // Auto Income Loop
        setInterval(() => {
            balance += autoRate;
            updateUI();
        }, 1000);

        function formatNumber(n) {
            if (n >= 1000000) return (n/1000000).toFixed(1) + "M";
            if (n >= 1000) return (n/1000).toFixed(1) + "k";
            return Math.floor(n);
        }

        function updateUI() {
            balanceDisplay.innerText = "€" + formatNumber(balance);
            
            // Upgrade Click Button update
            const btnClick = document.getElementById('upgrade-click');
            btnClick.innerHTML = `<b>Click Power</b><br>Level: ${levels.click}<br>Cost: €${formatNumber(costs.click)}`;
            btnClick.className = balance >= costs.click ? "upgrade-btn available" : "upgrade-btn";

            // Upgrade Auto Button update
            const btnAuto = document.getElementById('upgrade-auto');
            btnAuto.innerHTML = `<b>Auto Miner</b><br>Level: ${levels.auto}<br>Cost: €${formatNumber(costs.auto)}`;
            btnAuto.className = balance >= costs.auto ? "upgrade-btn available" : "upgrade-btn";
        }

        function createFloatingText(x, y, text) {
            const el = document.createElement('div');
            el.className = 'floating-text';
            el.innerText = text;
            el.style.left = x + 'px';
            el.style.top = y + 'px';
            document.body.appendChild(el);
            setTimeout(() => el.remove(), 800);
        }
    </script>
</body>
</html>
